# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini
AZURE_OPENAI_EMBEDDING_MODEL=text-embedding-3-large
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# Azure AI Foundry Project (for Azure AI Agent Service)
# Format: https://<your-ai-foundry-resource>.services.ai.azure.com/api/projects/<project-name>
PROJECT_ENDPOINT=https://your-project.services.ai.azure.com/api/projects/your-project-name

# Azure AI Project Configuration (for evaluation portal logging)
# Get these from: Azure AI Foundry portal > Your Project > Settings
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=your-resource-group
AZURE_AI_PROJECT_NAME=your-project-name

# Azure Service Principal Authentication
# Get these from: Azure Portal > App Registrations > Your App
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# Azure Blob Storage (for document storage)
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account-name
AZURE_STORAGE_CONTAINER_NAME=insurance-documents

# Azure AI Search (for document indexing)
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_INDEX_NAME=insurance-policies

# Azure Content Understanding (for document analysis)
AZURE_CONTENT_UNDERSTANDING_ENDPOINT=https://your-content-understanding.cognitiveservices.azure.com/
AZURE_CONTENT_UNDERSTANDING_KEY=your-content-understanding-key
AZURE_CONTENT_UNDERSTANDING_ANALYZER_ID=your-analyzer-id

# Azure Cosmos DB (for agent data storage)
AZURE_COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
AZURE_COSMOS_DATABASE_NAME=insurance-agents
AZURE_COSMOS_AGENT_DEFINITIONS_CONTAINER=agent-definitions
AZURE_COSMOS_AGENT_EXECUTIONS_CONTAINER=agent-executions
AZURE_COSMOS_TOKEN_USAGE_CONTAINER=token-usage
AZURE_COSMOS_EVALUATIONS_CONTAINER=evaluations

# Application Insights for telemetry
ENABLE_TELEMETRY=true
APPLICATION_INSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=https://your-region.in.applicationinsights.azure.com/;LiveEndpoint=https://your-region.livediagnostics.monitor.azure.com/;ApplicationId=your-app-id

# Agent Version Selection
# false (default): Use LangGraph supervisor (v1) - proven, stable
# true: Use Azure AI Agent Service supervisor (v2) - new, more integrated
USE_AZURE_AGENTS=false

# Microsoft Fabric Data Agent Integration (Optional)
# Enable the Claims Data Analyst agent which queries enterprise data from Fabric
# Requires: Published Fabric Data Agent in your workspace, connection in AI Foundry
# See: backend/fabric/README.md for setup instructions
USE_FABRIC_DATA_AGENT=false
FABRIC_CONNECTION_NAME=your-fabric-connection-name

# Fabric Data Agent setup configuration (used by fabric/create_data_agent.py)
# These are used when creating the Data Agent programmatically
FABRIC_DATA_AGENT_NAME=DA_DataAgent
FABRIC_LAKEHOUSE_NAME=LH_AIClaimsDemo

# For uploading sample data to Fabric Lakehouse (used by fabric/upload_to_fabric.py)
# OneLake uses fixed endpoint: https://onelake.dfs.fabric.microsoft.com/{workspace_id}/{lakehouse_id}.Lakehouse/
FABRIC_WORKSPACE_ID=your-workspace-guid
FABRIC_LAKEHOUSE_ID=your-lakehouse-guid
